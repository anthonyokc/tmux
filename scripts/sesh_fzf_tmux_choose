#!/bin/bash

# Colors
SESH_LIST=$(sesh list --json)

TMUX_SESSIONS=$(echo "$SESH_LIST" | jq '.[] | select(.Src == "tmux")')
ZOXIDE_SESSIONS=$(echo "$SESH_LIST" | jq '.[] | select(.Src == "zoxide")')

GRAY_TEXT='\033[1;30m'
NORMAL_TEXT='\033[0m'

FORMATTED_TMUX_SESSIONS=$(echo "$TMUX_SESSIONS" | jq -r '. | "‚ö° " + .Name')
FORMATTED_ZOXIDE_SESSIONS=$(echo "$ZOXIDE_SESSIONS" | jq -r '. | "üìÅ " + .Name')

LIST="$FORMATTED_TMUX_SESSIONS $FORMATTED_ZOXIDE_SESSIONS"
FORMATTED_LIST=$(printf "%s\n" $LIST)

CHOICE=$(
    echo $FORMATTED_LIST | awk 'BEGIN {RS=" "} {c++; if (c % 2 == 0) {printf("%s\n",$0)} else {printf("%s ",$0)}}' | fzf-tmux -p 80%,80% \
        --no-sort --border-label ' sesh ' --prompt '‚ö°  ' \
        --header '  ^a all ^t tmux ^x zoxide ^f find ^e tmux kill ^u zoxide remove' \
        --bind 'tab:down,btab:up' \
        --bind 'ctrl-a:change-prompt(‚ö°  )+reload(sesh list)' \
        --bind 'ctrl-t:change-prompt(ü™ü  )+reload(sesh list -t)' \
        --bind 'ctrl-x:change-prompt(üìÅ  )+reload(sesh list -z)' \
        --bind 'ctrl-f:change-prompt(üîé  )+reload(fd -H -d 2 -t d --ignore-file "~/.ignore" . ~/code)' \ # searches code directories
        --bind 'ctrl-e:execute(tmux kill-session -t {})+change-prompt(‚ö°  )+reload(sesh list)'
)

sesh connect "${CHOICE#* }"
