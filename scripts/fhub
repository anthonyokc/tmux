#!/usr/bin/zsh

# fzf fuzzy search of git repositories, then open in web browser
function fhub() {
    repo="$( \
        (cat $fzf_git_cache 2>/dev/null; $HOME/scripts/listrepo_gql $GITHUB_TOKEN $GITHUB_ORG) | \
        tee $fzf_git_cache | \
        nauniq | \
        gum filter --limit 1 --placeholder 'Open a repo in web browser' --height 50 --prompt='üåê ' \
    )"

    if [[ -n $repo ]]; then
       echo "Opening '$repo' in Web Browser"
       hub browse $repo
    fi
}

fhub
